@{
    ViewData["Title"] = "SQL Lekérdezés írása";
}

<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">SQL Szerkesztő</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>SQL</b> Szerkesztő</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/Home/Logout">
                                <i class="fa fa-sign-out"></i>
                                Kilépés
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    SQL Lekérdezés eredménye
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Adatbázis Szerver: @ViewData["DatabaseName"]</h3>
                            </div>
                            <!-- /.box-header -->
                            <div id="results">
                                <table class="table table-striped table-responsive">
                                    <caption>SQL Lekérdezés eredménye: @ViewData["Query"]</caption>
                                    <thead>
                                        <tr>
                                            @foreach (string s in ViewData["Columns"] as List<string>)
                                            {
                                                <th>@s</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var d in ViewData["Rows"] as List<Dictionary<string, string>>)
                                        {
                                            <tr>
                                                @foreach (string s in ViewData["Columns"] as List<string>)
                                                {
                                                    <td>@d[s]</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="box-footer">
                                <a href="/" class="btn btn-primary">Vissza</a>
                            </div>
                        </div>
                    </div>
                </div>



            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Verzió:</b> 0.1.0
            </div>
            <strong>Készítette: <a href="#">Lovas Bálint</a>.</strong>  &copy; @DateTime.Now.Year
        </footer>

    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="/js/jquery.min.js"></script>
    <!-- jQuery UI 1.12.1 -->
    <script src="/js/jquery-ui.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/js/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/js/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
</body>
