@{
    ViewData["Title"] = "Kapcsolódás Adatbázishoz";
}
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/"><i class="fa fa-database"></i> Kapcsolódás Adatbázishoz</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Kapcsolódási Adatok</p>
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Hiba!</h4>
                    @TempData["Error"]
                </div>
            }
            <form action="/Home/Login" method="post">
                <div class="form-group has-feedback">
                    <input type="text" name="machineName" class="form-control" placeholder="SQL Szerver Név">
                    <span class="fa fa-server form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" name="userName" class="form-control" placeholder="Felhasználónév">
                    <span class="fa fa-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="password" class="form-control" placeholder="Jelszó">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Kapcsolódás</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="/js/jquery.min.js"></script>
    <!-- jQuery UI 1.12.1 -->
    <script src="/js/jquery-ui.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/js/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/js/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
</body>
